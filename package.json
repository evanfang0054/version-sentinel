{
  "name": "version-sentinel",
  "version": "1.0.0", 
  "description": "一个轻量级的版本检查工具,用于检测Web应用是否有新版本。支持多种版本比较策略(ETag、Last-Modified、自定义),提供完整的事件系统和错误重试机制。",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./lib/types/index.d.ts",
      "import": "./lib/esm/index.js",
      "require": "./lib/cjs/index.js"
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run build:types && npm run build:cjs && npm run build:esm",
    "build:types": "tsc -p tsconfig.json --emitDeclarationOnly",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "version",
    "checker",
    "update",
    "web",
    "typescript"
  ],
  "author": "evanfang",
  "license": "MIT",
  "homepage": "https://github.com/evanfang0054/version-sentinel#readme",
  "bugs": {
    "url": "https://github.com/evanfang0054/version-sentinel/issues"
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "@types/jest": "^29.5.0",
    "typescript": "^4.9.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ]
  }
} 